<div style="height:15vh"></div>
<div class="container" style="height: 70vh">
<legend><center><h2><b>Restock a Drug</b></h2></center></legend><br>
<div class="row">
<div class="col-md-6">
   <%= image_tag("pic2.jpg", :alt => "rss feed", class:"img_fluid") %> 
</div>

<div class="col-md-6">
  <%= form_with url:'/drugpurchaselogs', method: :post, authenticity_token: false do |form| %> 

<div class="form-group mb-4">
   <label for="drug_id">Item Name</label>
   <%=select_tag 'drug_id', options_for_select(@drugs.collect{ |u| [u.name, u.id] }) %>
   
</div>  

  <div class="row">
    <div class="col-md-6">
        <div class="form-group mb-4">
            <label class="mb-2" for="order_no">Order Number</label>
            <input name="order_no" type="text" class="form-control" placeholder="Order number">
    
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group mb-4">
        <label class="mb-2" for="order_date">Order Date</label>
        <input name="order_date" type="date" class="form-control" placeholder="Order Date">
    
        </div>
    </div>

  </div>
    <div class="form-group mb-4">
   `          <label for="drug_id">Supplier Name</label>
                <%=select_tag 'supplier_id', options_for_select(@suppliers.collect{ |u| [u.supplier_name, u.id] }) %>
        </div>  
  <div class="row">
    <div class="col-md-6">
       <div class="form-group mb-4">
        <label class="mb-2" for="price_per_unit">Price Per Unit</label>
        <input name="price_per_unit" type="text" class="form-control" placeholder="Price Per Unit">
    
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group mb-4">
        <label class="mb-2" for="purchased_units">Purchased Units</label>
        <input name="purchased_units" type="text" class="form-control" placeholder="Purchased Units">
    
        </div>
    </div>

  </div>  
  
  <button type="submit" class="btn btn-outline-primary">Submit</button>
<%end%>
</div>

</div>
  
</div>





